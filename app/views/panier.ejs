<%- include('partials/header') %>

      <div class="row">
        <div class="col">
          <h3 class="text-center">Votre Panier</h3>

          <table class="table">
            <thead>
              <th>Article</th>
              <th>Quantit√©</th>
              <th>Prix HT</th>
            </thead>
            <tbody>
             <% for (let figurine of cart) { %>  
              <tr>
                <td>
                  <img class="img-thumbnail img-cart-list" src="/images/<%= figurine.name.
                  toLowerCase()%>.png" alt="<%= figurine.name %>">
                  <div class="item-description">
                      <h5 class="item-title"><%= figurine.name %> </h5>
                      <p class="item-prize">$<%= figurine.price %> </p>
                  </div>
                </td>

                <td>
                  <strong><%= figurine.quantity %> </strong>
                  <a href="/cart/add/<%= figurine.id %> ">+</a> / <a href="/cart/remove/<%= 
                  figurine.id %>">-</a>
                </td>

                <td>
                  <p class="item-subtotal">$<%= figurine.quantity * figurine.price %> </p>
                </td>
              </tr>
            <% } %> 
              <!-- Frais de port -->
              <tr>
                <td class="text-right" colspan="2">
                  Frais de port
                </td>
                <td class="item-subtotal">
                  $<%= totals.shipping %> 
                </td>
              </tr>

              <tfoot>
                <tr>
                  <td class="text-right" colspan="2">
                    Total HT
                  </td>
                  <td class="item-subtotal">
                    $<%= totals.totalHT %> 
                  </td>
                </tr>

                <tr>
                  <td class="text-right" colspan="2">
                    TVA 20%
                  </td>
                  <td class="item-subtotal">
                    $<%= totals.tva %> 
                  </td>
                </tr>

                <tr class="row-total">
                  <td class="text-right" colspan="2">
                    Total TTC
                  </td>
                  <td class="item-total">
                    $<%= totals.totalTTC %> 
                  </td>
                </tr>

              </tfoot>

            </tbody>

          </table>

          <div class="row">
            <div class="col text-right">
                <div class="btn btn-success">
                  Passer Commande
                </div>
            </div>
          </div>

        </div>
      </div>
  </div>


  <%- include('partials/footer') %>